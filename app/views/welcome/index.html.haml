= button_to "Fill checklist", new_checklist_path, method: :get, class: 'mdl-button mdl-js-button mdl-button--raised btn-margin'

%table.left-data-table.mdl-js-data-table.mdl-shadow--2dp
  %thead
    %tr
      %th.left-data-table__cell--non-numeric Project
      %th Checklist
      %th Updated
      %th Question
      %th Actions
  %tbody
    - @checklists.each do |checklist|
      %tr
        %td= checklist.form.name
        %td= checklist.form.description
        %td= checklist.form.updated_at.strftime("%Y-%m-%d")


