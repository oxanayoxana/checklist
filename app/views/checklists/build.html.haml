%p= @form.name
%p= @form.description
- @questions.each do |question|
  %p= question.title
  %p= question.description
  = simple_form_for(@checklist) do |f|
    = f.simple_fields_for :answers do |answer|
      = render 'answer_fields', f: answer
      = link_to_add_association button_tag('add', type: "button", class: "material-icons"), f, :answers, class: 'mdl-button mdl-js-button mdl-button--fab mdl-js-ripple-effect'
      = f.input :user_id, as: :hidden, input_html: { value: current_user.id }
      = f.input :form_id, as: :hidden, input_html: { value: @form.id }
      = f.input :project, as: :hidden, input_html: { value: @checklist.project }
      / = f.input :question_id, as: :hidden, input_html: { value: question }
    = f.button :button, 'Save', class: 'mdl-button mdl-js-button mdl-button--raised btn-margin'